<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.present.CreditsController">
    <children>
        <TextField fx:id="ProductionName" layoutX="42.0" layoutY="56.0" promptText="Enter production name" />
        <TextField fx:id="ProductionID" layoutX="226.0" layoutY="56.0" promptText="Enter associated ID" />
        <TextField fx:id="fullNameTextField" layoutX="42.0" layoutY="116.0" promptText="Enter full name" />
        <TextField fx:id="PersonIDTextField" layoutX="42.0" layoutY="175.0" promptText="Create unique ID" />
        <TextField fx:id="RoleTextField" layoutX="42.0" layoutY="230.0" promptText="Actor, Producer or sound" />
        <Button layoutX="69.0" layoutY="292.0" mnemonicParsing="false" onAction="#AddToList" prefHeight="25.0" prefWidth="96.0" text="Add to list" />
        <Button fx:id="confirmButton" layoutX="460.0" layoutY="354.0" mnemonicParsing="false" onAction="#ConfirmList" text="Confirm" />
        <Label layoutX="87.0" layoutY="42.0" text="Production" />
        <Label layoutX="265.0" layoutY="42.0" text="ProductionID" />
        <Label layoutX="101.0" layoutY="99.0" text="Name" />
        <Label layoutX="93.0" layoutY="158.0" text="PersonID" />
        <Label layoutX="105.0" layoutY="213.0" text="Role" />
        <Button layoutX="213.0" layoutY="292.0" mnemonicParsing="false" onAction="#deleteFromList" text="Delete from list" />
        <TableView fx:id="tableView" layoutX="350.0" layoutY="88.0" prefHeight="200.0" prefWidth="236.0">
            <columns>
                <TableColumn fx:id="fullNameColumn" onEditCommit="#changeFullnameCellEvent" prefWidth="83.0" text="Full name" />
                <TableColumn fx:id="personIDColumn" onEditCommit="#changePersonIDCellEvent" prefWidth="76.0" text="PersonID" />
                <TableColumn fx:id="RoleColumn" onEditCommit="#changeRoleCellEvent" prefWidth="75.0" text="Role" />
            </columns>
        </TableView>
        <Button fx:id="backButton" layoutX="35.0" layoutY="14.0" mnemonicParsing="false" onAction="#switchToProduction" prefHeight="25.0" prefWidth="32.0" styleClass="BackIcon" stylesheets="@../../CSS/BackArrow.css" />
    </children>
</AnchorPane>

